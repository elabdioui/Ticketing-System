@model Ticketing_System.Models.EscalationRule
@{
    ViewData["Title"] = "Create Escalation Rule";
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Escalation Rules</a></li>
            <li class="breadcrumb-item active" aria-current="page">Create</li>
        </ol>
    </nav>

    <div class="card shadow-sm">
        <div class="card-header">
            <h4 class="mb-0">Create New Escalation Rule</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="RuleName" class="form-label">Rule Name</label>
                            <input asp-for="RuleName" class="form-control" placeholder="e.g., Urgent Ticket Escalation" />
                            <span asp-validation-for="RuleName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="EscalateAfterHours" class="form-label">Escalate After (Hours)</label>
                            <input asp-for="EscalateAfterHours" type="number" class="form-control" min="1" />
                            <span asp-validation-for="EscalateAfterHours" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="3" 
                              placeholder="Describe when this escalation rule should be triggered"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Priority" class="form-label">Priority</label>
                            <select asp-for="Priority" class="form-select" asp-items="ViewBag.Priorities">
                                <option value="">Any Priority</option>
                            </select>
                            <span asp-validation-for="Priority" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Status" class="form-label">Status</label>
                            <select asp-for="Status" class="form-select" asp-items="ViewBag.Statuses">
                                <option value="">Any Status</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="card mb-3">
                    <div class="card-header">
                        <h5 class="mb-0">Escalation Target</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="EscalateToUserID" class="form-label">Escalate to User</label>
                                    <select asp-for="EscalateToUserID" class="form-select" asp-items="ViewBag.SupportUsers">
                                        <option value="">Select a user...</option>
                                    </select>
                                    <span asp-validation-for="EscalateToUserID" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="EscalateToTeamID" class="form-label">Escalate to Team</label>
                                    <select asp-for="EscalateToTeamID" class="form-select" asp-items="ViewBag.Teams">
                                        <option value="">Select a team...</option>
                                    </select>
                                    <span asp-validation-for="EscalateToTeamID" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <small class="form-text text-muted">Choose either a user or a team for escalation</small>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="NotifyUserIDs" class="form-label">Notify Users (comma-separated IDs)</label>
                    <input asp-for="NotifyUserIDs" class="form-control" placeholder="user1,user2,user3" />
                    <span asp-validation-for="NotifyUserIDs" class="text-danger"></span>
                    <small class="form-text text-muted">Enter user IDs separated by commas to notify when escalation occurs</small>
                </div>

                <div class="mb-3">
                    <div class="form-check">
                        <input class="form-check-input" asp-for="IsActive" />
                        <label class="form-check-label" asp-for="IsActive">
                            Active (Enable this rule immediately)
                        </label>
                    </div>
                </div>

                <div class="d-flex justify-content-end">
                    <a asp-action="Index" class="btn btn-secondary me-2">Cancel</a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Create Rule
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Empêcher la sélection simultanée d'un utilisateur et d'une équipe
        $(document).ready(function() {
            $('#EscalateToUserID').change(function() {
                if ($(this).val()) {
                    $('#EscalateToTeamID').val('');
                }
            });
            
            $('#EscalateToTeamID').change(function() {
                if ($(this).val()) {
                    $('#EscalateToUserID').val('');
                }
            });
        });
    </script>
}
