@model List<Ticketing_System.Models.SupportTeam>

<h2>Liste des Équipes</h2>

@if (User.IsInRole("Admin") || User.IsInRole("SuperAdmin"))
{
    <a asp-action="Create" class="btn btn-success mb-3">Créer une nouvelle équipe</a>
}

<table class="table">
    <thead>
        <tr>
            <th>Nom</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var team in Model)
{
    <tr>
        <td>@team.TeamName</td>
        <td>@team.Description</td>
        <td>
            <a asp-action="Edit" asp-route-id="@team.TeamID" class="btn btn-sm btn-warning">Modifier</a>
            <a asp-action="Delete" asp-route-id="@team.TeamID" class="btn btn-sm btn-danger">Supprimer</a>
        </td>
    </tr>
}
    </tbody>
</table>
