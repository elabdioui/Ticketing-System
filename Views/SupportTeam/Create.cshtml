@model Ticketing_System.Models.SupportTeam
@{
    ViewData["Title"] = "Créer une Équipe";
    Layout = User.IsInRole("Admin") ? "~/Views/Shared/_AdminLayout.cshtml" : "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Équipes</a></li>
            <li class="breadcrumb-item active" aria-current="page">Créer une équipe</li>
        </ol>
    </nav>

    <div class="card shadow-sm rounded-4">
        <div class="card-header bg-primary text-white py-3">
            <h4 class="mb-0"><i class="fas fa-users-cog me-2"></i>Créer une Nouvelle Équipe</h4>
        </div>
        <div class="card-body p-4">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="TeamName" class="form-label">Nom de l'équipe <span class="text-danger">*</span></label>
                    <input asp-for="TeamName" class="form-control" placeholder="Ex: Support Technique" required />
                    <span asp-validation-for="TeamName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Décrivez le rôle et les responsabilités de cette équipe"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="ManagerId" class="form-label">Manager <span class="text-danger">*</span></label>
                    <select asp-for="ManagerId" class="form-select" asp-items="ViewBag.Managers" required>
                        <option value="">-- Sélectionner un manager --</option>
                    </select>
                    <span asp-validation-for="ManagerId" class="text-danger"></span>
                    <small class="form-text text-muted">Le manager doit avoir le rôle Admin ou SupportAgent</small>
                </div>

                <div class="mb-4">
                    <label class="form-label">Membres de l'équipe</label>
                    <select name="MemberIds" class="form-select" multiple asp-items="ViewBag.AllUsers" size="5">
                    </select>
                    <small class="form-text text-muted">Sélectionnez les agents de support à ajouter à cette équipe (maintenez Ctrl pour sélectionner plusieurs)</small>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Annuler
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save me-2"></i>Créer l'équipe
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}