@model Ticketing_System.Models.SupportTeam
@{
    Layout = User.IsInRole("Admin") ? "~/Views/Shared/_AdminLayout.cshtml" : "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Team Details";
}

<div class="container py-5">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Support Teams</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.TeamName</li>
        </ol>
    </nav>

    <!-- Success Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mb-4">
            <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Error Messages -->
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show mb-4">
            <i class="fas fa-exclamation-circle me-2"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <!-- Team Info Card -->
        <div class="col-lg-4 mb-4">
            <div class="card shadow-sm rounded-4 h-100">
                <div class="card-header bg-primary text-white rounded-top-4">
                    <h5 class="mb-0"><i class="fas fa-users-cog me-2"></i>Team Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Team Name</dt>
                        <dd class="col-sm-8">@Model.TeamName</dd>

                        <dt class="col-sm-4">Description</dt>
                        <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.Description) ? "No description" : Model.Description)</dd>

                        <dt class="col-sm-4">Manager</dt>
                        <dd class="col-sm-8">
                            @if (Model.Manager != null)
                            {
                                <span>@Model.Manager.FirstName @Model.Manager.LastName</span>
                            }
                            else
                            {
                                <span class="text-muted">No manager assigned</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Tickets</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-info rounded-pill">@ViewBag.TicketCount</span>
                            <a asp-action="TeamTickets" asp-route-id="@Model.TeamID" class="ms-2 text-decoration-none">
                                <i class="fas fa-eye"></i> View
                            </a>
                        </dd>

                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">
                            @if (ViewBag.HasActiveAgents)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-warning">No Active Agents</span>
                            }
                        </dd>
                    </dl>
                </div>
                <div class="card-footer bg-light d-flex justify-content-between rounded-bottom-4">
                    <a asp-action="Edit" asp-route-id="@Model.TeamID" class="btn btn-warning btn-sm">
                        <i class="fas fa-edit me-1"></i> Edit
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.TeamID" class="btn btn-danger btn-sm">
                        <i class="fas fa-trash me-1"></i> Delete
                    </a>
                </div>
            </div>
        </div>

        <!-- Team Members Card -->
        <div class="col-lg-8 mb-4">
            <div class="card shadow-sm rounded-4">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center rounded-top-4">
                    <h5 class="mb-0"><i class="fas fa-users me-2"></i>Team Members</h5>
                    <a asp-controller="TeamMember" asp-action="AddMemberToTeam" asp-route-teamId="@Model.TeamID"
                       class="btn btn-light btn-sm">
                        <i class="fas fa-user-plus"></i> Add Member
                    </a>
                </div>
                <div class="card-body">
                    @if (ViewBag.Members != null && ViewBag.Members.Count > 0)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Joined</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var member in ViewBag.Members)
                                    {
                                        <tr>
                                            <td>
                                                @member.User.FirstName @member.User.LastName
                                            </td>
                                            <td>@member.User.Email</td>
                                            <td>@member.JoinDate.ToString("dd MMM yyyy")</td>
                                            <td>
                                                <form asp-controller="TeamMember" asp-action="Delete" asp-route-id="@member.TeamMemberID" method="post"
                                                      onsubmit="return confirm('Are you sure you want to remove this member from the team?');">
                                                    <button type="submit" class="btn btn-outline-danger btn-sm">
                                                        <i class="fas fa-user-minus"></i> Remove
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-users-slash fa-4x text-muted mb-3"></i>
                            <h5>No Team Members</h5>
                            <p class="text-muted">This team doesn't have any members yet.</p>
                            <a asp-controller="TeamMember" asp-action="AddMemberToTeam" asp-route-teamId="@Model.TeamID"
                               class="btn btn-primary mt-2">
                                <i class="fas fa-user-plus me-1"></i> Add First Member
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Manager Assignment Card (if needed) -->
    @if (Model.Manager == null)
    {
        <div class="card shadow-sm rounded-4 mb-4">
            <div class="card-header bg-warning text-dark rounded-top-4">
                <h5 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i>Assign Manager</h5>
            </div>
            <div class="card-body">
                <p>This team doesn't have a manager. Assign one to ensure proper team coordination.</p>

                <form asp-action="AssignManager" method="post" class="row g-3">
                    <input type="hidden" name="teamId" value="@Model.TeamID" />
                    <div class="col-md-8">
                        <select name="managerId" class="form-select" required>
                            <option value="">-- Select Manager --</option>
                            @foreach (var user in ViewBag.AvailableManagers ?? new List<object>())
                            {
                                <option value="@user.Id">@user.FirstName @user.LastName (@user.Email)</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-primary w-100">Assign Manager</button>
                    </div>
                </form>
            </div>
        </div>
    }

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i> Back to Team List
        </a>
    </div>
</div>