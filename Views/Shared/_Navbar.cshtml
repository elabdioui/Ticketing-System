@{
    var currentAction = ViewContext.RouteData.Values["Action"]?.ToString() ?? "";
    var currentController = ViewContext.RouteData.Values["Controller"]?.ToString() ?? "";
}

<nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm py-3" style="z-index: 1050;">
    <div class="container-fluid">
        <!-- Logo -->
        <a class="navbar-brand d-flex align-items-center fw-bold" href="/">
            <i class="fas fa-ticket-alt text-primary me-2"></i> QuantumDesk
        </a>

        <!-- Toggler for mobile -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Navbar Links -->
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                <!-- ðŸ‘‡ DASHBOARD Dynamique -->
                @if (User.IsInRole("Admin"))
                {
                    <li class="nav-item">
                        <a class="nav-link @(currentController == "Ticket" && currentAction == "Dashboard" ? "active fw-bold text-primary" : "")"
                           asp-controller="Ticket" asp-action="Dashboard">
                            <i class="fas fa-chart-line me-1"></i> Dashboard Admin
                        </a>
                    </li>
                }
                else if (User.IsInRole("SupportAgent"))
                {
                    <li class="nav-item">
                        <a class="nav-link @(currentController == "Ticket" && currentAction == "Dashboard" ? "active fw-bold text-primary" : "")"
                           asp-controller="Ticket" asp-action="Dashboard">
                            <i class="fas fa-tools me-1"></i> Dashboard Support
                        </a>
                    </li>
                }
                else if (User.Identity?.IsAuthenticated ?? false)
                {
                    <li class="nav-item">
                        <a class="nav-link @(currentController == "Ticket" && currentAction == "MyTickets" ? "active fw-bold text-primary" : "")"
                           asp-controller="Ticket" asp-action="MyTickets">
                            <i class="fas fa-user me-1"></i> Dashboard Utilisateur
                        </a>
                    </li>
                }

                <!-- Autres liens -->
                <li class="nav-item">
                    <a class="nav-link @(currentController == "Home" && currentAction == "Index" ? "active fw-bold text-primary" : "")" href="/">
                        <i class="fas fa-home me-1"></i> Accueil
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link @(currentController == "Home" && currentAction == "About" ? "active fw-bold text-primary" : "")" href="/Home/About">
                        <i class="fas fa-info-circle me-1"></i> Ã€ propos
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link @(currentController == "Home" && currentAction == "FAQ" ? "active fw-bold text-primary" : "")" href="/Home/FAQ">
                        <i class="fas fa-question-circle me-1"></i> FAQ
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link @(currentController == "Home" && currentAction == "Contact" ? "active fw-bold text-primary" : "")" href="/Home/Contact">
                        <i class="fas fa-envelope me-1"></i> Contact
                    </a>
                </li>

                @if (User.IsInRole("Admin"))
                {
                    <li class="nav-item">
                        <a class="nav-link @(currentController == "SupportTeam" ? "active fw-bold text-primary" : "")" asp-controller="SupportTeam" asp-action="Index">
                            <i class="fas fa-users-cog me-1"></i> Ã‰quipes
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(currentController == "TeamMember" ? "active fw-bold text-primary" : "")" asp-controller="TeamMember" asp-action="Index">
                            <i class="fas fa-users me-1"></i> Membres
                        </a>
                    </li>
                }
            </ul>

            <!-- Authentification -->
            <div class="d-flex align-items-center gap-2">
                @if (User?.Identity?.IsAuthenticated ?? false)
                {
                    <div class="dropdown">
                        <button class="btn btn-light dropdown-toggle" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-user-circle me-1"></i> @(User.Identity.Name ?? "Compte")
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                            <li><a class="dropdown-item" href="/Ticket/MyTickets"><i class="fas fa-ticket-alt me-2"></i> Mes Tickets</a></li>
                            <li><a class="dropdown-item" href="/Profile"><i class="fas fa-user-cog me-2"></i> Mon Profil</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <form class="dropdown-item p-0" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                    <button type="submit" class="btn btn-link p-0 w-100 text-start text-danger">
                                        <i class="fas fa-sign-out-alt me-2"></i> DÃ©connexion
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </div>
                }
                else
                {
                    <a class="btn btn-primary" asp-area="Identity" asp-page="/Account/Login">
                        <i class="fas fa-sign-in-alt me-1"></i> Connexion
                    </a>
                    <a class="btn btn-outline-primary" asp-area="Identity" asp-page="/Account/Register">
                        <i class="fas fa-user-plus me-1"></i> Inscription
                    </a>
                }
            </div>
        </div>
    </div>
</nav>
