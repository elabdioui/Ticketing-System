@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - QuantumDesk Support Agent</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- External CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet" />

    <style>
        body {
            display: flex;
            min-height: 100vh;
            background-color: #f4f6fa;
            font-family: 'Segoe UI', sans-serif;
        }

        .sidebar {
            width: 250px;
            background: linear-gradient(135deg, #00a78e, #007f73);
            color: #fff;
            padding: 2rem 1rem;
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            overflow-y: auto;
        }

        .sidebar h3 {
            font-weight: bold;
            font-size: 1.5rem;
            text-align: center;
            margin-bottom: 2rem;
        }

        .sidebar a {
            color: #e1f7f5;
            text-decoration: none;
            padding: 0.75rem 1rem;
            border-radius: 0.5rem;
            display: flex;
            align-items: center;
            margin-bottom: 0.8rem;
            transition: 0.3s ease;
        }

        .sidebar a:hover,
        .sidebar a.active {
            background: rgba(255, 255, 255, 0.1);
            color: #fff;
            font-weight: bold;
        }

        .sidebar a i {
            margin-right: 0.75rem;
        }

        .main-content {
            margin-left: 250px;
            padding: 2rem;
            width: 100%;
        }
    </style>
</head>
<body>

    <!-- Sidebar Support Agent -->
    <div class="sidebar">
        <h3>QuantumDesk</h3>

        <a href="/SupportAgent/Dashboard" class="@(ViewContext.RouteData.Values["action"]?.ToString() == "Dashboard" ? "active" : "")">
            <i class="fas fa-home"></i> Dashboard
        </a>

        <a href="/Ticket/AssignedTickets" class="@(ViewContext.RouteData.Values["action"]?.ToString() == "AssignedTickets" ? "active" : "")">
            <i class="fas fa-inbox"></i> My Tickets
        </a>

        <a href="/TeamMember" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "TeamMember" ? "active" : "")">
            <i class="fas fa-users"></i> Team Tickets
        </a>

        <a href="/Notification" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Notification" ? "active" : "")">
            <i class="fas fa-bell"></i> Notifications
        </a>

        <a href="/Profile" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Profile" ? "active" : "")">
            <i class="fas fa-user"></i> My Profile
        </a>

        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/">
            <button type="submit" class="btn btn-outline-light w-100 mt-3">
                <i class="fas fa-sign-out-alt me-2"></i> Logout
            </button>
        </form>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        @RenderBody()
    </div>

    <!-- Optional Scripts Section -->
    @RenderSection("Scripts", required: false)

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
