<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - QuantumDesk Support Agent</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap & FontAwesome CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/quantumdesk-theme.css" />
    <link rel="stylesheet" href="~/css/support-agent-layout.css" />
</head>
<body>
    <!-- Support Agent Sidebar -->
    <div class="agent-sidebar">
        <div class="sidebar-top">
            <div class="logo-wrapper">
                <i class="fas fa-headset"></i>
                <div class="logo-text">QuantumDesk</div>
            </div>

            <div class="agent-profile">
                <div class="agent-avatar">
                    <img src="https://ui-avatars.com/api/?name=@User.Identity?.Name&background=00a78e&color=fff" alt="Agent Avatar">
                </div>
                <div class="agent-name">@User.Identity?.Name</div>
                <div class="agent-title">Support Agent</div>
            </div>
        </div>

        <div class="sidebar-menu">
            <h6>Dashboard</h6>
            <ul class="list-unstyled">
                <li>
                    <a href="/SupportAgent/Dashboard" class="@(ViewContext.RouteData.Values["Action"]?.ToString() == "Dashboard" ? "active" : "")">
                        <i class="fas fa-tachometer-alt"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
            </ul>

            <h6>Tickets</h6>
            <ul class="list-unstyled">
                <li>
                    <a href="/Ticket/AssignedTickets" class="@(ViewContext.RouteData.Values["Action"]?.ToString() == "AssignedTickets" ? "active" : "")">
                        <i class="fas fa-inbox"></i>
                        <span>My Tickets</span>
                    </a>
                </li>
                <li>
                    <a href="/Ticket" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Ticket" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")">
                        <i class="fas fa-ticket-alt"></i>
                        <span>All Tickets</span>
                    </a>
                </li>
                
            </ul>

            <h6>Team</h6>
            <ul class="list-unstyled">
                <li>
                    <a href="/TeamMember" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "TeamMember" ? "active" : "")">
                        <i class="fas fa-users"></i>
                        <span>My Team</span>
                    </a>
                </li>
            </ul>

            <h6>Account</h6>
            <ul class="list-unstyled">
                <li>
                    <a href="/Profile" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Profile" ? "active" : "")">
                        <i class="fas fa-user"></i>
                        <span>My Profile</span>
                    </a>
                </li>
                <li>
                    <a href="/Notification" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Notification" ? "active" : "")">
                        <i class="fas fa-bell"></i>
                        <span>Notifications</span>
                    </a>
                </li>
                <li>
                    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/">
                        <button type="submit">
                            <i class="fas fa-sign-out-alt"></i>
                            <span>Logout</span>
                        </button>
                    </form>
                </li>
            </ul>
        </div>
    </div>

    <!-- Main Content Area -->
    <div class="main-content">
        <div class="content-header">
            <div class="header-title">
                <h1>@ViewData["Title"]</h1>
                <p>Support Agent Dashboard</p>
            </div>

            <div class="header-actions">
                <button class="notification-btn">
                    <i class="fas fa-bell"></i>
                    <span class="notification-badge">3</span>
                </button>

                <button class="notification-btn d-md-none" id="toggleSidebar">
                    <i class="fas fa-bars"></i>
                </button>
            </div>
        </div>


        <!-- Page Content -->
        @RenderBody()
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        // Mobile sidebar toggle
        document.getElementById('toggleSidebar')?.addEventListener('click', function() {
            document.body.classList.toggle('sidebar-shown');
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>