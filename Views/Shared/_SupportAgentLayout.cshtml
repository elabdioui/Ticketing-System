<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - QuantumDesk Support Agent</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap & FontAwesome CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet" />

    <style>
        body {
            display: flex;
            min-height: 100vh;
            background-color: #f4f6fa;
            font-family: 'Segoe UI', sans-serif;
        }

        .sidebar {
            width: 250px;
            background: linear-gradient(135deg, #00a78e, #007f73);
            color: #fff;
            padding: 2rem 1rem;
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            overflow-y: auto;
        }

        .sidebar a {
            color: #e1f7f5;
            text-decoration: none;
            padding: 0.75rem 1rem;
            border-radius: 0.5rem;
            display: flex;
            align-items: center;
            margin-bottom: 0.8rem;
            transition: 0.3s ease;
        }

        .sidebar a:hover,
        .sidebar a.active {
            background: rgba(255, 255, 255, 0.1);
            color: #fff;
            font-weight: bold;
        }

        .main-content {
            flex-grow: 1;
            padding: 2rem;
            width: 100%;
            margin-left: 250px; 
            display: flex;
            justify-content: center; /* Centre horizontalement */
            align-items: flex-start;
        }

        .container-fluid {
            width: 100%;
            max-width: 1400px;
        }
    </style>
</head>
<body>

    <!-- Sidebar Support Agent -->
    <div class="sidebar">
        <h3>QuantumDesk</h3>
        <a href="/SupportAgent/Dashboard"><i class="fas fa-home me-2"></i> Dashboard</a>
        <a href="/Ticket/AssignedTickets"><i class="fas fa-inbox me-2"></i> Assigned Tickets</a>
        <a href="/Profile"><i class="fas fa-user me-2"></i> My Profile</a>

        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/">
            <button type="submit" class="btn btn-outline-light w-100 mt-3">
                <i class="fas fa-sign-out-alt me-2"></i> Logout
            </button>
        </form>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        @RenderBody()
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
