    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>@ViewData["Title"] - QuantumDesk Admin</title>

        <!-- External CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet" />
        
        <!-- Custom Styling -->
        <style>
            /* Global Styles */
            body {
                background-color: #f5f7fa;
                display: flex;
                overflow-x: hidden;
                font-family: 'Poppins', sans-serif;
            }

            /* Sidebar */
            .sidebar {
                width: 250px;
                background: linear-gradient(135deg, #1a3a5f, #25486a);
                padding: 2rem 1rem;
                position: fixed;
                top: 0;
                left: 0;
                height: 100vh;
                overflow-y: auto;
                color: #fff;
                box-shadow: 2px 0 8px rgba(0, 0, 0, 0.15);
            }
            .sidebar h3 {
                font-weight: bold;
                font-size: 1.5rem;
                text-align: center;
                margin-bottom: 2rem;
                background: linear-gradient(90deg, #00a78e, #00c3b2);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
            }
            .sidebar a {
                color: #cbd5e0;
                text-decoration: none;
                padding: 0.75rem 1rem;
                border-radius: 0.5rem;
                display: flex;
                align-items: center;
                margin-bottom: 0.8rem;
                transition: all 0.3s ease;
                font-size: 1rem;
            }
            .sidebar a:hover, .sidebar a.active {
                background: #00a78e;
                color: #ffffff;
                font-weight: bold;
            }
            .sidebar a i {
                margin-right: 0.75rem;
            }

            /* Main Content */
            .main-content {
                margin-left: 250px;
                width: calc(100% - 250px);
                padding: 2rem;
                min-height: 100vh;
            }

            /* Home Button Special Style */
            .btn-home {
                background: rgba(255,255,255,0.1);
                border: 1px solid #00a78e;
                color: #00a78e;
                font-weight: bold;
                margin-bottom: 1.5rem;
                transition: 0.3s ease;
            }
            .btn-home:hover {
                background: #00a78e;
                color: white;
            }
        </style>
    </head>

    <body>

    <!-- Sidebar -->
    <div class="sidebar">
        <h3>QuantumDesk</h3>

        <a href="/Home/Accueil" class="btn btn-home w-100 text-start">
        <i class="fas fa-home"></i> Home
    </a>


        <a asp-controller="Admin" asp-action="Dashboard" class="@(ViewContext.RouteData.Values["action"]?.ToString() == "Dashboard" ? "active" : "")">
            <i class="fas fa-tachometer-alt"></i> Dashboard
        </a>

        <!-- Nouveau bouton Gestion des Utilisateurs -->
    <a asp-controller="Admin" asp-action="Users"
        class="@(ViewContext.RouteData.Values["action"]?.ToString() == "Users" ? "active" : "")">
        <i class="fas fa-users-cog"></i> Gestion des Utilisateurs
    </a>

        @{
        // capture the current path for active-link detection
        var currentPath = ViewContext.HttpContext.Request.Path.Value ?? "";
    }
    <a href="/Ticket"
    class="quantum-nav-link @(currentPath.Equals("/Ticket", StringComparison.OrdinalIgnoreCase) ? "active" : "")">
        <i class="fas fa-ticket-alt me-2"></i>  Tickets
    </a>


        <a asp-controller="TeamMember" asp-action="Index" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "TeamMember" ? "active" : "")">
            <i class="fas fa-users"></i> Team Members
        </a>

        <a asp-controller="SupportTeam" asp-action="Index" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "SupportTeam" ? "active" : "")">
            <i class="fas fa-users-cog"></i> Support Teams
        </a>

        <a asp-controller="Notification" asp-action="Index" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Notification" ? "active" : "")">
            <i class="fas fa-bell"></i> Notifications
        </a>

        <a asp-controller="Profile" asp-action="Index" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Profile" ? "active" : "")">
            <i class="fas fa-user"></i> My Profile
        </a>
        <a asp-controller="Ticket" asp-action="UnassignedTickets" class="@(ViewContext.RouteData.Values["action"]?.ToString() == "UnassignedTickets" ? "active" : "")">
            <i class="fas fa-exclamation-triangle"></i> Tickets non assignés
        </a>
        <a asp-controller="Diagnostic" asp-action="Index" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Diagnostic" ? "active" : "")">
            <i class="fas fa-stethoscope"></i> Diagnostics
        </a>

    <form id="logoutForm" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/">
        <button type="submit" class="btn btn-outline-danger w-100 text-start">
            <i class="fas fa-sign-out-alt me-2"></i> Logout
        </button>
    </form>


    </div>
    <!-- End Sidebar -->


        <!-- Main Content -->
        <div class="main-content">
            @RenderBody()
        </div>

        <!-- Scripts -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
        @RenderSection("Scripts", required: false)
    </body>
    </html>
