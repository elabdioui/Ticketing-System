<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - QuantumDesk Admin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/quantumdesk-theme.css" />
    <link rel="stylesheet" href="~/css/admin-layout.css" />
</head>
<body>
    <!-- Admin Sidebar -->
    <div class="admin-sidebar">
        <div class="sidebar-header">
            <i class="fas fa-cog"></i>
            <h5>Admin Dashboard</h5>
        </div>

        <div class="admin-section">
            <div class="section-title">Dashboard</div>
            <ul class="sidebar-nav">
                <li>
                    <a href="/Admin/Dashboard" class="@(ViewContext.RouteData.Values["Action"]?.ToString() == "Dashboard" ? "active" : "")">
                        <i class="fas fa-tachometer-alt"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
            </ul>
        </div>

        <div class="admin-section">
            <div class="section-title">User Management</div>
            <ul class="sidebar-nav">
                <li>
                    <a href="/Admin/Users" class="@(ViewContext.RouteData.Values["Action"]?.ToString() == "Users" ? "active" : "")">
                        <i class="fas fa-users"></i>
                        <span>All Users</span>
                    </a>
                </li>
                <li>
                    <a href="/Admin/CreateUser" class="@(ViewContext.RouteData.Values["Action"]?.ToString() == "CreateUser" ? "active" : "")">
                        <i class="fas fa-user-plus"></i>
                        <span>Create User</span>
                    </a>
                </li>
            </ul>
        </div>

        <div class="admin-section">
            <div class="section-title">Teams & Tickets</div>
            <ul class="sidebar-nav">
                <li>
                    <a href="/SupportTeam" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "SupportTeam" ? "active" : "")">
                        <i class="fas fa-users-cog"></i>
                        <span>Support Teams</span>
                    </a>
                </li>
                <li>
                    <a href="/TeamMember" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "TeamMember" ? "active" : "")">
                        <i class="fas fa-user-tag"></i>
                        <span>Team Members</span>
                    </a>
                </li>
                <li>
                    <a href="/Ticket" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Ticket" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")">
                        <i class="fas fa-ticket-alt"></i>
                        <span>All Tickets</span>
                    </a>
                </li>
                <li>
                    <a href="/Ticket/UnassignedTickets" class="@(ViewContext.RouteData.Values["Action"]?.ToString() == "UnassignedTickets" ? "active" : "")">
                        <i class="fas fa-exclamation-circle"></i>
                        <span>Unassigned Tickets</span>
                        <span class="badge rounded-pill">5</span>
                    </a>
                </li>
            </ul>
        </div>

        <div class="admin-section">
            <div class="section-title">Settings</div>
            <ul class="sidebar-nav">
                <li>
                    <a href="/AssignmentRule" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "AssignmentRule" ? "active" : "")">
                        <i class="fas fa-random"></i>
                        <span>Assignment Rules</span>
                    </a>
                </li>
                <li>
                    <a href="/EscalationRule" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "EscalationRule" ? "active" : "")">
                        <i class="fas fa-arrow-up"></i>
                        <span>Escalation Rules</span>
                    </a>
                </li>
                <li>
                    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home")">
                        <button type="submit" class="btn w-100 text-start" style="background: none; border: none; color: #e2e8f0; padding: 10px 12px;">
                            <i class="fas fa-sign-out-alt" style="width: 20px; margin-right: 10px; text-align: center;"></i>
                            <span>Logout</span>
                        </button>
                    </form>
                </li>
            </ul>
        </div>
    </div>

    <!-- Main Content Area -->
    <div class="admin-content">
        <div class="page-header">
            <div>
                <h1>@ViewData["Title"]</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a href="/Admin/Dashboard">Admin</a></li>
                        <li class="breadcrumb-item active">@ViewData["Title"]</li>
                    </ol>
                </nav>
            </div>

            <div class="user-dropdown">
                <div class="dropdown">
                    <button class="btn btn-outline-secondary dropdown-toggle d-flex align-items-center" type="button" id="userMenu" data-bs-toggle="dropdown" aria-expanded="false">
                        <div class="user-avatar me-2">A</div>
                        <span>Admin</span>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userMenu">
                        <li><a class="dropdown-item" href="/Profile"><i class="fas fa-user-circle me-2"></i>My Profile</a></li>
                        <li><a class="dropdown-item" href="/Profile/ChangePassword"><i class="fas fa-key me-2"></i>Change Password</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home")">
                                <button type="submit" class="dropdown-item text-danger">
                                    <i class="fas fa-sign-out-alt me-2"></i>Logout
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="admin-container">
            @RenderBody()
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>