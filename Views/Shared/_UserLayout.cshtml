@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - QuantumDesk</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/quantumdesk-theme.css" />
    <link rel="stylesheet" href="~/css/user-layout.css" />
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="sidebar">
            <div class="sidebar-brand d-flex align-items-center">
                <i class="fas fa-ticket-alt me-2 text-success fs-4"></i>
                <h5 class="mb-0">QuantumDesk</h5>
            </div>

            <div class="menu-title">MAIN NAVIGATION</div>
            <ul class="sidebar-menu">
                <li>
                    <a href="/User/Dashboard" class="@(ViewContext.RouteData.Values["Action"]?.ToString() == "Dashboard" ? "active" : "")">
                        <i class="fas fa-home"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
                <li>
                    <a href="/Ticket/MyTickets" class="@(ViewContext.RouteData.Values["Action"]?.ToString() == "MyTickets" ? "active" : "")">
                        <i class="fas fa-ticket-alt"></i>
                        <span>My Tickets</span>
                    </a>
                </li>
                <li>
                    <a href="/Ticket/Create" class="@(ViewContext.RouteData.Values["Action"]?.ToString() == "Create" && ViewContext.RouteData.Values["Controller"]?.ToString() == "Ticket" ? "active" : "")">
                        <i class="fas fa-plus-circle"></i>
                        <span>Create Ticket</span>
                    </a>
                </li>
            </ul>

            <div class="menu-title">USER SETTINGS</div>
            <ul class="sidebar-menu">
                <li>
                    <a href="/Profile" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Profile" ? "active" : "")">
                        <i class="fas fa-user-circle"></i>
                        <span>My Profile</span>
                    </a>
                </li>
                <li>
                    <a href="/Notification" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Notification" ? "active" : "")">
                        <i class="fas fa-bell"></i>
                        <span>Notifications</span>
                    </a>
                </li>
                <li>
                    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home")">
                        <button type="submit" class="btn w-100 text-start" style="background: none; border: none; color: #e2e8f0; padding: 12px 15px;">
                            <i class="fas fa-sign-out-alt" style="margin-right: 10px; width: 20px;"></i>
                            <span>Logout</span>
                        </button>
                    </form>
                </li>
            </ul>
        </div>

        <!-- Content Wrapper -->
        <div class="content-wrapper">
            <div class="top-bar">
                <h1 class="page-title">@ViewData["Title"]</h1>
                <div class="d-flex align-items-center">
                    <div class="badge-container me-4">
                        <a href="/Notification" class="btn btn-light rounded-circle" style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                            <i class="fas fa-bell text-secondary"></i>
                        </a>
                        <span class="notification-badge">3</span>
                    </div>
                    <div class="user-profile">
                        <img src="https://ui-avatars.com/api/?name=@User.Identity.Name&background=0D8ABC&color=fff" alt="User Profile" />
                    </div>
                </div>
            </div>

            <!-- Main Content -->
            <div class="content-container">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>