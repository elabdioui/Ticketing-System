@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - QuantumDesk</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
</head>
<body style="background-color:#f1f3f4;">
    <div class="d-flex">
        <!-- ✅ Sidebar USER ONLY -->
        <div class="bg-white shadow-sm p-4" style="width: 250px; min-height: 100vh;">
            <h5 class="text-primary mb-4"><i class="fas fa-user-circle me-2"></i>Menu</h5>
            <ul class="nav flex-column">
                <li class="nav-item mb-2">
    <a class="nav-link" href="/User/Dashboard">
        <i class="fas fa-home me-2"></i>Dashboard
    </a>
</li>

                <li class="nav-item mb-2">
                    <a class="nav-link" href="/Ticket/MyTickets"><i class="fas fa-ticket-alt me-2"></i>My Tickets</a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link" href="/Ticket/Create"><i class="fas fa-plus-circle me-2"></i>Create Ticket</a>
                </li>
               
                <li class="nav-item mb-2">
    <a class="nav-link" href="/Profile">
        <i class="fas fa-user me-2"></i>Profile
    </a>
</li>

                <li class="nav-item mt-3">
                    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home")">
                        <button type="submit" class="btn btn-outline-danger w-100">
                            <i class="fas fa-sign-out-alt me-2"></i>Logout
                        </button>
                    </form>
                </li>
            </ul>
        </div>

        <!-- ✅ Content -->
        <div class="flex-grow-1 p-4">
            @RenderBody()
        </div>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
