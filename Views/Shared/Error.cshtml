@model ErrorViewModel
@{
    ViewData["Title"] = "Erreur";
}

<div class="container py-5">
    <div class="quantum-card quantum-shadow">
        <div class="card-body text-center">
            <div class="mb-4">
                <i class="fas fa-exclamation-triangle text-danger fa-4x mb-3"></i>
                <h1 class="quantum-page-title">Une erreur est survenue</h1>
                <p class="text-muted fs-5">Nous sommes désolés, une erreur s'est produite lors du traitement de votre demande.</p>
            </div>

            @if (Model.ShowRequestId)
            {
                <div class="alert alert-secondary d-inline-block">
                    <strong>Identifiant de la requête :</strong> <code>@Model.RequestId</code>
                </div>
            }

            @if (Environment.GetEnvironmentVariable("ASPNETCORE_ENVIRONMENT") == "Development")
            {
                <div class="mt-5">
                    <div class="alert alert-warning">
                        <h3 class="h5"><i class="fas fa-code me-2"></i>Mode Développement</h3>
                        <p class="mb-0">Des informations détaillées sur l'erreur sont affichées car vous êtes en environnement de développement.</p>
                    </div>
                    
                    <div class="alert alert-danger">
                        <p>
                            <strong>Attention :</strong> L'environnement de développement ne doit pas être activé pour les applications déployées.
                            Cela pourrait exposer des informations sensibles aux utilisateurs.
                        </p>
                        <p class="mb-0">
                            Pour le débogage local, activez l'environnement de développement en définissant la variable d'environnement
                            <code>ASPNETCORE_ENVIRONMENT</code> à <code>Development</code> et redémarrez l'application.
                        </p>
                    </div>
                </div>
            }

            <div class="mt-4">
                <a href="/" class="quantum-btn quantum-btn-primary">
                    <i class="fas fa-home me-2"></i> Retour à l'accueil
                </a>
            </div>
        </div>
    </div>
</div>
