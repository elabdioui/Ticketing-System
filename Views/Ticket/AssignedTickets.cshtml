@model IEnumerable<Ticketing_System.Models.Ticket>
@using System.Security.Claims
@{
    ViewData["Title"] = "Tickets assignés";

    // Définir le bon layout en fonction du rôle de l'utilisateur
    if (User.IsInRole("Admin"))
    {
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
    else if (User.IsInRole("SupportAgent"))
    {
        Layout = "~/Views/Shared/_SupportAgentLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Tickets qui me sont assignés</h1>
        <div>
            <div class="btn-group">
                <button type="button" class="btn btn-outline-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-filter"></i> Filtrer
                </button>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li><h6 class="dropdown-header">Statut</h6></li>
                    <li><a class="dropdown-item" asp-action="FilterByStatus" asp-route-status="Open">Ouverts</a></li>
                    <li><a class="dropdown-item" asp-action="FilterByStatus" asp-route-status="InProgress">En cours</a></li>
                    <li><a class="dropdown-item" asp-action="FilterByStatus" asp-route-status="Resolved">Résolus</a></li>
                    <li><a class="dropdown-item" asp-action="FilterByStatus" asp-route-status="Closed">Fermés</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><h6 class="dropdown-header">Priorité</h6></li>
                    <li><a class="dropdown-item" asp-action="FilterByPriority" asp-route-priority="Critical">Critique</a></li>
                    <li><a class="dropdown-item" asp-action="FilterByPriority" asp-route-priority="High">Élevée</a></li>
                    <li><a class="dropdown-item" asp-action="FilterByPriority" asp-route-priority="Medium">Moyenne</a></li>
                    <li><a class="dropdown-item" asp-action="FilterByPriority" asp-route-priority="Low">Basse</a></li>
                </ul>
            </div>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-list"></i> Tous les tickets
            </a>
        </div>
    </div>

    <!-- Affichage du nombre de tickets par statut -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body text-center">
                    <h2>@Model.Count(t => t.Status == TicketStatus.Open)</h2>
                    <p class="mb-0">Ouverts</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark">
                <div class="card-body text-center">
                    <h2>@Model.Count(t => t.Status == TicketStatus.InProgress)</h2>
                    <p class="mb-0">En cours</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body text-center">
                    <h2>@Model.Count(t => t.Status == TicketStatus.Resolved)</h2>
                    <p class="mb-0">Résolus</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-secondary text-white">
                <div class="card-body text-center">
                    <h2>@Model.Count(t => t.Status == TicketStatus.Closed)</h2>
                    <p class="mb-0">Fermés</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Ajout d'un message de débogage -->
    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">
            <p>Aucun ticket n'est actuellement assigné à votre compte.</p>
            <p>ID Utilisateur: @User.Identity.Name</p>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Titre</th>
                                <th>Créé par</th>
                                <th>Statut</th>
                                <th>Priorité</th>
                                <th>Créé le</th>
                                <th>Dernière mise à jour</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ticket in Model)
                            {
                                <tr>
                                    <td>@ticket.TicketID</td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@ticket.TicketID">@ticket.Title</a>
                                    </td>
                                    <td>@ticket.CreatedByUser?.FirstName @ticket.CreatedByUser?.LastName</td>
                                    <td>
                                        @{
                                            string statusClass = ticket.Status switch
                                            {
                                                TicketStatus.Open => "bg-primary",
                                                TicketStatus.InProgress => "bg-warning",
                                                TicketStatus.Resolved => "bg-success",
                                                TicketStatus.Closed => "bg-secondary",
                                                _ => "bg-info"
                                            };
                                        }
                                        <span class="badge @statusClass">@ticket.Status</span>
                                    </td>
                                    <td>
                                        @{
                                            string priorityClass = ticket.Priority switch
                                            {
                                                TicketPriority.Low => "bg-success",
                                                TicketPriority.Medium => "bg-info",
                                                TicketPriority.High => "bg-warning",
                                                TicketPriority.Critical => "bg-danger",
                                                _ => "bg-secondary"
                                            };
                                        }
                                        <span class="badge @priorityClass">@ticket.Priority</span>
                                    </td>
                                    <td>@ticket.CreatedDate.ToString("dd MMM yyyy")</td>
                                    <td>@ticket.UpdatedDate.ToString("dd MMM yyyy")</td>
                                    <td>
                                        <div class="btn-group">
                                            <a asp-action="Details" asp-route-id="@ticket.TicketID" class="btn btn-sm btn-info">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@ticket.TicketID" class="btn btn-sm btn-warning">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-clipboard-check fa-4x text-muted mb-3"></i>
                    <h4>Aucun ticket assigné</h4>
                    <p class="text-muted">Il n'y a actuellement aucun ticket assigné à votre compte.</p>
                </div>
            }
        </div>
    </div>
</div>