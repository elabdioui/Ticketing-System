@model Ticketing_System.Models.Ticket
@using System.Security.Claims
@{
    var user = Context.User;

    if (user?.Identity?.IsAuthenticated ?? false)
    {
        if (user.IsInRole("Admin") || user.IsInRole("SuperAdmin"))
        {
            Layout = "~/Views/Shared/_AdminLayout.cshtml";
        }
        else if (user.IsInRole("SupportAgent"))
        {
            Layout = "~/Views/Shared/_SupportAgentLayout.cshtml";
        }
        else
        {
            Layout = "~/Views/Shared/_UserLayout.cshtml";
        }
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml"; // default fallback
    }
}



<div class="container mt-4">
    <h2 class="mb-4">🎫 Créer un nouveau ticket</h2>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <!-- Informations principales -->
                <div class="mb-3">
                    <label asp-for="Title" class="form-label">Titre</label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <label asp-for="Category" class="form-label">Catégorie</label>
                        <select asp-for="Category" class="form-select" asp-items="ViewBag.Categories" asp-option-label="-- Choisir --"></select>
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="Priority" class="form-label">Priorité</label>
                        <select asp-for="Priority" class="form-select" asp-items="ViewBag.Priorities" asp-option-label="-- Choisir --"></select>
                        <span asp-validation-for="Priority" class="text-danger"></span>
                    </div>
                    
                </div>

                <div class="mb-3 mt-3">
                    <label asp-for="Description" class="form-label">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

              

                <!-- Valeurs cachées -->
                <input type="hidden" asp-for="Source" value="Web" />
                @Html.HiddenFor(m => m.CreatedByUserId, new { Value = User?.FindFirstValue(ClaimTypes.NameIdentifier) })

                <hr />

                <!-- Champ de commentaire -->
                <div class="mb-4">
                    <label for="commentText" class="form-label">Commentaire initial</label>
                    <textarea name="InitialComment" id="commentText" class="form-control" rows="3" placeholder="Ajoutez un commentaire..."></textarea>
                </div>

                <!-- Pièce jointe -->
                <div class="mb-4">
                    <label for="file" class="form-label">Ajouter une pièce jointe</label>
                    <input type="file" name="file" id="file" class="form-control" />
                </div>
                @if (User.IsInRole("Admin") || User.IsInRole("SupportAgent"))
                {
                    <div class="card mt-3">
                        <div class="card-header">
                            <h5 class="mb-0">Ticket Assignment & Escalation</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <form asp-controller="AssignmentRule" asp-action="ApplyToTicket" method="post">
                                        <input type="hidden" name="ticketId" value="@Model.TicketID" />
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fas fa-random"></i> Apply Assignment Rules
                                        </button>
                                    </form>
                                </div>
                                <div class="col-md-6">
                                    @if (!Model.IsEscalated)
                                    {
                                        <form asp-controller="EscalationRule" asp-action="EscalateTicket" method="post">
                                            <input type="hidden" name="ticketId" value="@Model.TicketID" />
                                            <button type="submit" class="btn btn-warning">
                                                <i class="fas fa-arrow-up"></i> Escalate Ticket
                                            </button>
                                        </form>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }

                <div class="d-flex justify-content-end">
                    <a asp-action="Index" class="btn btn-secondary me-2">Annuler</a>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save me-1"></i> Créer le ticket
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
