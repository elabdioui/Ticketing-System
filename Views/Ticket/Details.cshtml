@model Ticketing_System.Models.Ticket
@{
    ViewData["Title"] = "Ticket Details";
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Tickets</a></li>
            <li class="breadcrumb-item active" aria-current="page">Details</li>
        </ol>
    </nav>

    <div class="card shadow-sm mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Ticket #@Model.TicketID</h4>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.TicketID" class="btn btn-warning btn-sm">
                    <i class="fas fa-edit"></i> Edit
                </a>
                <a asp-action="Index" class="btn btn-secondary btn-sm">
                    <i class="fas fa-arrow-left"></i> Back
                </a>
            </div>
        </div>
        <div class="card-body">
            <h3>@Model.Title</h3>

            <div class="row mb-4 mt-3">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-primary">@Model.Status</span>
                        </dd>

                        <dt class="col-sm-4">Priority</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-warning">@Model.Priority</span>
                        </dd>

                        <dt class="col-sm-4">Category</dt>
                        <dd class="col-sm-8">@Model.Category</dd>

                        <dt class="col-sm-4">Created By</dt>
                        <dd class="col-sm-8">@Model.CreatedByUser?.FirstName @Model.CreatedByUser?.LastName</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Created Date</dt>
                        <dd class="col-sm-8">@Model.CreatedDate.ToString("dd MMM yyyy HH:mm")</dd>

                        <dt class="col-sm-4">Updated Date</dt>
                        <dd class="col-sm-8">@Model.UpdatedDate.ToString("dd MMM yyyy HH:mm")</dd>

                        <dt class="col-sm-4">Assigned To</dt>
                        <dd class="col-sm-8">
                            @if (Model.AssignedToUser != null)
                            {
                                @Model.AssignedToUser.FirstName @Model.AssignedToUser.LastName
                            }
                            else if (Model.AssignedToTeam != null)
                            {
                                <span>Team: @Model.AssignedToTeam.TeamName</span>
                            }
                            else
                            {
                                <span class="text-muted">Unassigned</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Source</dt>
                        <dd class="col-sm-8">@Model.Source</dd>
                    </dl>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Description</h5>
                </div>
                <div class="card-body">
                    <p class="white-space-pre-wrap">@Model.Description</p>
                </div>
            </div>

            <!-- Commentaires et autres informations peuvent être ajoutés ici -->
        </div>
    </div>
</div>

<style>
    .white-space-pre-wrap {
        white-space: pre-wrap;
    }
</style>
```