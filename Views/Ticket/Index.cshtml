@using System.Security.Claims
@{
    var user = Context.User;

    if (user?.Identity?.IsAuthenticated ?? false)
    {
        if (user.IsInRole("Admin") || user.IsInRole("SuperAdmin"))
        {
            Layout = "~/Views/Shared/_AdminLayout.cshtml";
        }
        else if (user.IsInRole("SupportAgent"))
        {
            Layout = "~/Views/Shared/_SupportAgentLayout.cshtml";
        }
        else
        {
            Layout = "~/Views/Shared/_UserLayout.cshtml";
        }
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml"; // default fallback
    }
}


@model IEnumerable<Ticketing_System.Models.Ticket>
@{
    ViewData["Title"] = "All Tickets";
}

<div class="container py-5">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h1 class="fw-bold mb-0">All Tickets</h1>
            <small class="text-muted">Manage and view all tickets from the system</small>
        </div>
        <a asp-action="Create" class="btn btn-success rounded-pill px-4 py-2 shadow-sm">
            <i class="fas fa-plus me-2"></i> New Ticket
        </a>
    </div>

    @if (ViewData["CurrentFilter"] != null)
    {
        <div class="alert alert-info d-flex justify-content-between align-items-center">
            <div>
                <i class="fas fa-filter me-2"></i> Filtering by: <strong>@ViewData["CurrentFilter"]</strong>
            </div>
            <a asp-action="Index" class="btn btn-sm btn-light">Clear Filter</a>
        </div>
    }

    <!-- Ticket Table -->
    <div class="card shadow-sm rounded-4">
        <div class="card-body p-4">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>#</th>
                                <th>Title</th>
                                <th>Category</th>
                                <th>Priority</th>
                                <th>Status</th>
                                <th>Created By</th>
                                <th>Created Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ticket in Model)
                            {
                                <tr>
                                    <td class="fw-bold">@ticket.TicketID</td>
                                    <td>@ticket.Title</td>
                                    <td>
                                        <a asp-action="FilterByCategory" asp-route-category="@ticket.Category" class="badge bg-primary text-decoration-none">
                                            @ticket.Category
                                        </a>
                                    </td>
                                    <td>
                                        <a asp-action="FilterByPriority" asp-route-priority="@ticket.Priority" class="badge bg-warning text-dark text-decoration-none">
                                            @ticket.Priority
                                        </a>
                                    </td>
                                    <td>
                                        <a asp-action="FilterByStatus" asp-route-status="@ticket.Status" class="badge bg-info text-decoration-none">
                                            @ticket.Status
                                        </a>
                                    </td>
                                    <td>@ticket.CreatedByUser?.FirstName @ticket.CreatedByUser?.LastName</td>
                                    <td>@ticket.CreatedDate.ToString("dd MMM yyyy")</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@ticket.TicketID" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@ticket.TicketID" class="btn btn-sm btn-outline-warning">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            @if (User.IsInRole("Admin"))
                                            {
                                                <a asp-action="Delete" asp-route-id="@ticket.TicketID" class="btn btn-sm btn-outline-danger">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-ticket-alt fa-4x text-muted mb-3"></i>
                    <h4 class="fw-bold">No tickets found</h4>
                    <p class="text-muted">There are currently no tickets available. You can create a new one!</p>
                    <a asp-action="Create" class="btn btn-primary rounded-pill mt-3 px-4 py-2">
                        <i class="fas fa-plus me-2"></i> Create New Ticket
                    </a>
                </div>
            }
        </div>
    </div>
</div>
