@{
    Layout = User.IsInRole("Admin") ? "~/Views/Shared/_AdminLayout.cshtml" : "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<Ticketing_System.Models.TeamMember>

@{
    ViewData["Title"] = "Team Members List";
}

<div class="container py-5">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="fw-bold mb-0">Team Members</h1>
            <small class="text-muted">Manage the assignment of users to teams</small>
        </div>
        <a asp-action="Create" class="btn btn-success rounded-pill px-4 py-2 shadow-sm">
            <i class="fas fa-user-plus me-2"></i> Add Member
        </a>
    </div>

    <!-- Table -->
    <div class="card shadow-sm rounded-4">
        <div class="card-body p-4">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>#ID</th>
                                <th>User Name</th>
                                <th>Team Name</th>
                                <th>Joined Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var member in Model)
                            {
                                <tr>
                                    <td class="fw-bold">@member.TeamMemberID</td>
                                    <td>@member.User?.UserName</td>
                                    <td>@member.Team?.TeamName</td>
                                    <td>@member.JoinDate.ToString("dd MMM yyyy")</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Delete" asp-route-id="@member.TeamMemberID" 
                                               class="btn btn-sm btn-outline-danger rounded-pill">
                                                <i class="fas fa-trash-alt"></i> Remove
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-users fa-4x text-muted mb-3"></i>
                    <h4 class="fw-bold">No team members found</h4>
                    <p class="text-muted">Start by adding users to teams.</p>
                    <a asp-action="Create" class="btn btn-primary rounded-pill mt-3 px-4 py-2">
                        <i class="fas fa-user-plus me-2"></i> Add First Member
                    </a>
                </div>
            }

            @if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

        </div>
    </div>
</div>
