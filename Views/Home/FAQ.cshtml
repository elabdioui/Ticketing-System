@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h1 class="text-center mb-5 quantum-section-title">Frequently Asked Questions</h1>

    <!-- FAQ Section -->
    <div class="accordion" id="faqAccordion">
        <div class="accordion-item quantum-animate-slide-up" style="animation-delay: 0.1s;">
            <h2 class="accordion-header" id="faqHeadingOne">
                <button class="accordion-button quantum-accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#faqCollapseOne" aria-expanded="true" aria-controls="faqCollapseOne">
                    <strong>What is QuantumDesk?</strong>
                </button>
            </h2>
            <div id="faqCollapseOne" class="accordion-collapse collapse show" aria-labelledby="faqHeadingOne" data-bs-parent="#faqAccordion">
                <div class="accordion-body quantum-accordion-body">
                    QuantumDesk is a ticket management system designed to help businesses streamline their customer support.
                </div>
            </div>
        </div>

        <div class="accordion-item quantum-animate-slide-up" style="animation-delay: 0.2s;">
            <h2 class="accordion-header" id="faqHeadingTwo">
                <button class="accordion-button quantum-accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faqCollapseTwo" aria-expanded="false" aria-controls="faqCollapseTwo">
                    <strong>How do I create a ticket?</strong>
                </button>
            </h2>
            <div id="faqCollapseTwo" class="accordion-collapse collapse" aria-labelledby="faqHeadingTwo" data-bs-parent="#faqAccordion">
                <div class="accordion-body quantum-accordion-body">
                    To create a ticket, simply log in to your dashboard and click on the 'Create New Ticket' button.
                </div>
            </div>
        </div>

        <div class="accordion-item quantum-animate-slide-up" style="animation-delay: 0.3s;">
            <h2 class="accordion-header" id="faqHeadingThree">
                <button class="accordion-button quantum-accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faqCollapseThree" aria-expanded="false" aria-controls="faqCollapseThree">
                    <strong>How can I contact support?</strong>
                </button>
            </h2>
            <div id="faqCollapseThree" class="accordion-collapse collapse" aria-labelledby="faqHeadingThree" data-bs-parent="#faqAccordion">
                <div class="accordion-body quantum-accordion-body">
                    You can contact support by submitting a ticket through the system, or by emailing <a href="mailto:support@quantumdesk.com" class="text-info">support@quantumdesk.com</a>.
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        /* Main Title Styling */
        .quantum-section-title {
            font-size: 2.5rem;
            font-weight: 700;
            color: #333;
            letter-spacing: 1px;
            text-transform: uppercase;
            position: relative;
            padding-bottom: 10px;
            margin-bottom: 50px;
        }

        .quantum-section-title::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 60px;
            height: 3px;
            background-color: #00a78e;
        }

        /* Accordion Button Styling */
        .quantum-accordion-button {
            background-color: #007b6f;
            color: white;
            font-weight: 600;
            transition: background-color 0.3s ease;
            padding: 15px;
            border-radius: 8px;
            box-shadow: 0 3px 6px rgba(0, 0, 0, 0.1);
        }

        .quantum-accordion-button:not(.collapsed) {
            background-color: #005f47;
        }

        .quantum-accordion-button:focus {
            box-shadow: none;
        }

        .quantum-accordion-body {
            background-color: #f7f7f7;
            color: #555;
            font-size: 1.1rem;
            padding: 20px;
            border-radius: 8px;
            box-shadow: inset 0 0 10px rgba(0, 0, 0, 0.1);
            line-height: 1.6;
        }

        /* Animation */
        .quantum-animate-slide-up {
            animation: slideUp 0.5s ease-out forwards;
        }

        @@keyframes slideUp {
            0% {
                transform: translateY(20px);
                opacity: 0;
            }
            100% {
                transform: translateY(0);
                opacity: 1;
            }
        }

        /* Custom Link Styling */
        a {
            text-decoration: none;
        }

        a:hover {
            text-decoration: underline;
        }

        .text-info {
            color: #00a78e !important;
        }
    </style>
}
