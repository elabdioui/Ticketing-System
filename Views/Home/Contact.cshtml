@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="contact-us py-5" style="background-color: #f4f6f9;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 text-center mb-4">
                <h2 class="display-4 text-dark">Get In Touch</h2>
                <p class="lead text-muted">We're here to help you with any queries or support. Fill out the form below, and our team will get back to you shortly.</p>
            </div>
        </div>

        <!-- Contact Information Section -->
        <div class="row justify-content-center">
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card shadow-lg p-4 rounded-4" style="background-color: #ffffff;">
                    <h4 class="text-center text-primary mb-4">Contact Information</h4>
                    <ul class="list-unstyled">
                        <li><i class="fas fa-envelope text-primary me-2"></i><strong>Email:</strong> <a href="mailto:support@quantumdesk.com">support@quantumdesk.com</a></li>
                        <li><i class="fas fa-phone-alt text-primary me-2"></i><strong>Phone:</strong> +1234567890</li>
                        <li><i class="fas fa-map-marker-alt text-primary me-2"></i><strong>Address:</strong> QuantumDesk, 123 Support St, City, Country</li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Contact Form Section -->
        <div class="row justify-content-center mt-5">
            <div class="col-lg-8">
                <h4 class="text-center text-primary mb-4">Send Us a Message</h4>
                <form method="post" action="/Home/SubmitContactForm" class="contact-form">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <input type="text" name="name" id="name" class="form-control rounded-pill" placeholder="Your Name" required />
                        </div>
                        <div class="col-md-6">
                            <input type="email" name="email" id="email" class="form-control rounded-pill" placeholder="Your Email" required />
                        </div>
                    </div>
                    <div class="mb-4">
                        <textarea class="form-control rounded-4" name="message" id="message" rows="5" placeholder="Your Message" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary w-100 rounded-pill py-3" style="font-size: 1.1rem; transition: all 0.3s ease;">
                        <i class="fas fa-paper-plane me-2"></i>Send Message
                    </button>
                </form>
            </div>
        </div>
    </div>
</section>

@section Styles {
    <style>
        /* Section Styling */
        .contact-us {
            background-color: #f4f6f9;
        }

        /* Card Styling */
        .card {
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        }

        /* Button Styling */
        .btn-primary {
            background-color: #00a78e;
            border-color: #00a78e;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            background-color: #028a70;
            border-color: #028a70;
            transform: translateY(-5px);
        }

        /* Form Styling */
        .form-control {
            border-radius: 50px;
            padding: 1rem;
            border: 1px solid #ddd;
            font-size: 1.1rem;
            transition: border-color 0.3s ease;
        }

        .form-control:focus {
            border-color: #00a78e;
            box-shadow: 0 0 8px rgba(0, 167, 142, 0.3);
        }

        /* Header Styling */
        h2.display-4 {
            font-weight: 700;
            font-size: 2.5rem;
            color: #333;
        }

        h4 {
            font-size: 1.75rem;
            font-weight: 600;
            color: #333;
        }

        .text-primary {
            color: #00a78e;
        }

        /* Animation on Form Inputs */
        .contact-form input, .contact-form textarea {
            transition: all 0.3s ease;
        }

        .contact-form input:focus, .contact-form textarea:focus {
            border-color: #00a78e;
            box-shadow: 0 0 5px rgba(0, 167, 142, 0.3);
        }
    </style>
}
