@{
    Layout = User.IsInRole("Admin") ? "~/Views/Shared/_AdminLayout.cshtml" : "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Accueil";
}

<div class="container py-5">
    <!-- Welcome Section -->
    <div class="text-center mb-5">
        <h1 class="fw-bold display-4 mb-3">Welcome to QuantumDesk, @User.Identity.Name!</h1>
        <p class="lead text-muted">Manage your support tickets efficiently and easily.</p>
        <div class="d-flex justify-content-center gap-3 mt-4">
            <a asp-controller="Ticket" asp-action="Index" class="btn btn-primary btn-lg shadow-sm rounded-pill px-4">
                <i class="fas fa-ticket-alt me-2"></i> View All Tickets
            </a>
            <a asp-controller="Ticket" asp-action="Create" class="btn btn-success btn-lg shadow-sm rounded-pill px-4">
                <i class="fas fa-plus me-2"></i> Create New Ticket
            </a>
        </div>
    </div>

    <!-- Quick Access Cards -->
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card shadow-sm border-0 rounded-4 h-100">
                <div class="card-body text-center p-4">
                    <div class="text-primary mb-3">
                        <i class="fas fa-list fa-3x"></i>
                    </div>
                    <h5 class="fw-bold mb-2">My Tickets</h5>
                    <p class="text-muted mb-4">See the tickets you have created and their statuses.</p>
                    <a asp-controller="Ticket" asp-action="MyTickets" class="btn btn-outline-primary rounded-pill px-4">
                        <i class="fas fa-eye me-2"></i> View My Tickets
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-0 rounded-4 h-100">
                <div class="card-body text-center p-4">
                    <div class="text-warning mb-3">
                        <i class="fas fa-tasks fa-3x"></i>
                    </div>
                    <h5 class="fw-bold mb-2">Assigned Tickets</h5>
                    <p class="text-muted mb-4">Manage the tickets assigned to you by the team.</p>
                    <a asp-controller="Ticket" asp-action="AssignedTickets" class="btn btn-outline-warning rounded-pill px-4">
                        <i class="fas fa-clipboard-list me-2"></i> Manage Assigned Tickets
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-0 rounded-4 h-100">
                <div class="card-body text-center p-4">
                    <div class="text-info mb-3">
                        <i class="fas fa-book fa-3x"></i>
                    </div>
                    <h5 class="fw-bold mb-2">Knowledge Base</h5>
                    <p class="text-muted mb-4">Access solutions and guides from our knowledge base.</p>
                    <a href="#" class="btn btn-outline-info rounded-pill px-4">
                        <i class="fas fa-book-open me-2"></i> Explore Knowledge Base
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- You can add dashboard-specific JS here if needed -->
}
