@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{
    Layout = User.IsInRole("Admin") ? "~/Views/Shared/_AdminLayout.cshtml" : "~/Views/Shared/_Layout.cshtml";
}
    

@model Ticketing_System.Models.User
@{
    ViewData["Title"] = "Create User";
}

<div class="container mt-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb">
        <ol class="quantum-breadcrumb">
            <li class="quantum-breadcrumb-item">
                <a asp-action="Users" class="quantum-footer-link">Users</a>
            </li>
            <li class="quantum-breadcrumb-item active" aria-current="page">Create</li>
        </ol>
    </nav>

    <!-- Card -->
    <div class="quantum-card quantum-animate-fade-in">
        <div class="quantum-card-header">
            <h4 class="mb-0 quantum-text-primary">Create New User</h4>
        </div>
        <div class="quantum-card-body">
            <form asp-action="CreateUser" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3 quantum-form-floating">
                            <input asp-for="FirstName" class="quantum-form-control" placeholder="First Name" />
                            <label asp-for="FirstName">First Name</label>
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3 quantum-form-floating">
                            <input asp-for="LastName" class="quantum-form-control" placeholder="Last Name" />
                            <label asp-for="LastName">Last Name</label>
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="mb-3 quantum-form-floating">
                    <input asp-for="Email" class="quantum-form-control" placeholder="Email" />
                    <label asp-for="Email">Email</label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3 quantum-form-floating">
                    <input type="password" name="password" id="password" class="quantum-form-control" placeholder="Password" />
                    <label for="password">Password</label>
                </div>

                <div class="mb-3 quantum-form-floating">
                    <input asp-for="PhoneNumber" class="quantum-form-control" placeholder="Phone Number" />
                    <label asp-for="PhoneNumber">Phone Number</label>
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label quantum-text-primary">Assign Roles</label>
                    <select name="selectedRoles" class="form-select quantum-form-control" multiple asp-items="ViewBag.Roles">
                    </select>
                </div>

                <!-- Buttons -->
                <div class="d-flex justify-content-end">
                    <a asp-action="Users" class="btn quantum-btn quantum-btn-outline-secondary me-2">
                        Cancel
                    </a>
                    <button type="submit" class="btn quantum-btn quantum-btn-primary">
                        <i class="fas fa-save"></i> Create User
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
