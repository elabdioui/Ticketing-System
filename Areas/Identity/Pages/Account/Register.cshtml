@page
@model RegisterModel
@{
    ViewData["Title"] = "Inscription";
}

@section Styles {
    <link rel="stylesheet" href="~/css/identity-pages.css" />
    <style>
        /* Conteneur principal */
        .identity-container {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, #4f46e5, #0ea5e9);
            color: #fff;
        }

        /* Formulaire */
        .register-container {
            background: #fff;
            color: #333;
            border-radius: 12px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
            padding: 2rem;
        }

        .register-title {
            font-size: 2rem;
            font-weight: bold;
            color: #4f46e5;
            text-align: center;
            margin-bottom: 1rem;
        }

        .form-floating label {
            color: #6c757d;
        }

        .form-floating input {
            border-radius: 8px;
            border: 1px solid #ced4da;
        }

        .form-floating input:focus {
            border-color: #4f46e5;
            box-shadow: 0 0 0 0.2rem rgba(79, 70, 229, 0.25);
        }

        .btn-success-quantum {
            background: #4f46e5;
            border: none;
            color: #fff;
            padding: 0.75rem 1.5rem;
            font-size: 1rem;
            font-weight: bold;
            border-radius: 8px;
            transition: all 0.3s ease;
            width: 100%;
        }

        .btn-success-quantum:hover {
            background: #4338ca;
            box-shadow: 0 4px 12px rgba(79, 70, 229, 0.3);
        }

        .quantum-link {
            color: #4f46e5;
            text-decoration: none;
            font-weight: bold;
        }

        .quantum-link:hover {
            text-decoration: underline;
        }

        .identity-features-list li {
            display: flex;
            align-items: center;
            margin-bottom: 1rem;
        }

        .identity-features-list li i {
            font-size: 1.5rem;
            color: #4f46e5;
            margin-right: 1rem;
        }

        .or-divider {
            text-align: center;
            margin: 2rem 0;
            position: relative;
        }

        .or-divider::before,
        .or-divider::after {
            content: "";
            position: absolute;
            top: 50%;
            width: 40%;
            height: 1px;
            background: #ddd;
        }

        .or-divider::before {
            left: 0;
        }

        .or-divider::after {
            right: 0;
        }

        .or-divider span {
            background: #fff;
            padding: 0 1rem;
            color: #6c757d;
        }

        .btn-external {
            display: flex;
            align-items: center;
            justify-content: center;
            background: #f8f9fa;
            border: 1px solid #ced4da;
            color: #333;
            padding: 0.75rem 1.5rem;
            border-radius: 8px;
            font-size: 1rem;
            font-weight: bold;
            transition: all 0.3s ease;
            width: 100%;
            margin-bottom: 1rem;
        }

        .btn-external i {
            margin-right: 0.5rem;
        }

        .btn-external:hover {
            background: #e2e6ea;
        }
    </style>
}

